<div class="dashboard-background" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1557682268-e3955ed5d83f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1700&q=80);">

  <div class="dashboard-container filter-buttons">
    <%= link_to "All", { controller: "contents", action: "index" }, class:"btn btn-light mb-3 filter" %>
    <%= link_to "Movies", @params.merge({ controller: "contents", action: "index", category: 'movie' }), class:"btn btn-light mb-3 filter #{'filter_selected' if params[:category] == 'movie'}" %>
    <%= link_to "Series", @params.merge({ controller: "contents", action: "index", category: 'series' }), class:"btn btn-light mb-3 filter #{'filter_selected' if params[:category] == 'series'}" %>

    <div class="btn btn-light mb-3">
      <%= link_to "", @params.merge({ controller: "contents", action: "index", imdb_rating: '0' }), class:"filter #{ params[:imdb_rating].to_f >= 0 ? "fas" : "far" } fa-star" %>
      <%= link_to "", @params.merge({ controller: "contents", action: "index", imdb_rating: '2' }), class:"filter #{ params[:imdb_rating].to_f >= 2 ? "fas" : "far" } fa-star" %>
      <%= link_to "", @params.merge({ controller: "contents", action: "index", imdb_rating: '4' }),class:"filter #{params[:imdb_rating].to_f >= 4 ? "fas" : "far" } fa-star" %>
      <%= link_to "", @params.merge({ controller: "contents", action: "index", imdb_rating: '6' }), class:"filter #{params[:imdb_rating].to_f >= 6 ? "fas" : "far" } fa-star" %>
      <%= link_to "", @params.merge({ controller: "contents", action: "index", imdb_rating: '8' }), class:" filter #{params[:imdb_rating].to_f >= 8 ? "fas" : "far" } fa-star" %>
    </div>

    <button class="btn btn-light mb-3 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Genre
    </button>
    <div class="dropdown-menu genres-dropdown" aria-labelledby="dropdownMenuButton">
      <% @genres.each do |genre| %>
      <a class="dropdown-item" href="#"><%= link_to genre, @params.merge({ controller: "contents", action: "index", genre: genre }) %></a>
      <% end %>
    </div>

    <%= render '/shared/weeks_content', weeks: @weeks %>

  </div>

</div>
