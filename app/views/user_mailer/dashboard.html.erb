
<%#= @weeks %>
<div class="email-container">

  <div>
    <img src="https://res.cloudinary.com/mrbean/image/upload/v1583510060/samples/outflix/logo_email_ynvx59.png" style="width:300px">
  </div>

  <div>
    <h2> Hello <%= @user.first_name.capitalize %>  <%= @user.last_name.capitalize %> </h2>
    <h3>Check this month leaving titles !</h3>
  </div>

  <div>
    <table>
      <tbody>
        <% @weeks.each do |week| %>
          <tr><td colspan="4"> <%= (Date.commercial(2020, week[0]).strftime("%A, %d/%m"))%> - <%= ((Date.commercial(2020, week[0]) + 6).strftime("%A, %d/%m"))%></td></tr>
          <% week.last.each_slice(4) do |titles| %>
          <tr>
            <% titles.each do |content| %>
            <td>
              <div class="email-card email-grid">
                <img src="<%= content.image_url %>" />
                <div class="email-card-info">
                  <p><%= content.expiration_date %></p>
                </div>
              </div>
            </td>
            <% end %>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <div>
      <%= link_to "Go to Outflix website!!", root_url %>
    </div>

  </div>
</div>


<!--

-->

<style>
  .email-container {
    text-align: center;
    font-family: Oswald, sans-serif;
    width: 70%;
    margin: 35px auto;
  }

  table{
    margin: auto;
  }

  .email-content{
    border-left: 1vw solid clear;
    border-right: 1vw solid clear;
    border-bottom: 0.8vw solid clear;
    border-radius: 10px;
    padding-bottom: 10px;
    background-color: white;
    margin: 0 auto 25px;
  }
  .email-content h3 {
    font-family: 'Oswald', sans-serif;
    padding: 20px 0 20px 30px;
    margin-bottom: 0px;
  }

  .email-cards{
    overflow: hidden;
    background: white;
  }

  .email-cards > img {
    height: 200px;
    width: 100%;
    object-fit: cover;
  }


  .email-card-info p {
    text-align: center;
    margin: 0 auto 20px;
   }

</style>
